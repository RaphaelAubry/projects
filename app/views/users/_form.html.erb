<%= form_for @user do |form| %>
  <%= form.label "name" %>
  <%= form.text_field :name %>
  <% if select_task %>
    <% if selection_for_available_tasks.present? %>
      <%= form.label "task" %>
      <%= form.select :tasks, selection_for_available_tasks, multiple: true, include_blank: false %>
    <% else %>
      No available tasks
    <% end %>
  <% end %>
  <%= form.submit "validate" %>
<% end %>
